<idea-plugin>
    <id>com.tellme.tellme-plugin</id>

    <name>Tell Me</name>
    <vendor url="https://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
        Explain the currently opened file using a local model (Ollama).
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyMessageBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="Tell Me"
                anchor="right"
                factoryClass="com.tellme.tellmeplugin.ui.TellMeToolWindowFactory"
                canCloseContents="true"
                secondary="false"
        />
    </extensions>

    <actions>
        <action
                id="TellMeAction"
                class="com.tellme.tellmeplugin.action.TellMeAction"
                text="Tell Me"
                description="Explain current file">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
